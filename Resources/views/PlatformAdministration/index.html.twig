{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'parameters' | trans({}, 'platform') | striptags | raw }}{% endblock %}

{% block breadcrumb %}
{{
    macros.breadcrumbs([
        {
            'icon': 'fa fa-cog',
            'name': 'administration'|trans({}, 'platform'),
            'href': path('claro_admin_parameters_index')
        },
        {
            'name': 'platforms'|trans({}, 'platform'),
            'href': ''
        }
    ])
}}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'platform_list'|trans({}, 'platform') }}</h3>
    </div>
    <div class="panel-body">

        <div class="table-responsive">
            <table id="platform-table"  class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th> {{ 'name'|trans({}, 'platform') }} </th>
                        <th> {{ 'url'|trans({}, 'platform') }} </th>
                        <th> {{ 'users'|trans({}, 'platform') }} </th>
                        <th> {{ 'workspaces'|trans({}, 'platform') }} </th>
                        <th> {{ 'details'|trans({}, 'platform') }} </th>
                        <th> {{ 'last_modification'|trans({}, 'platform') }} </th>
                        <th> {{ 'refresh'|trans({}, 'platform') }} </th>
                    </tr>
                </thead>
                <tbody id="platform-table-body">
                    {% for platform in platforms %}
                        {% include "FormaLibrePlatformAdministrationBundle:PlatformAdministration:platform_row.html.twig" with {'platform': platform} %}
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a id="refresh-new" class="btn btn-primary" href="{{ path('formalibre_platformadministration_refresh_new') }}"> {{ 'add_missings'|trans({}, 'platform') }} </a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('bundles/frontend/moment.min.js') }}"></script>
    <script>
        /*var modal = window.Claroline.Modal;

        $('body').on('click', '.refresh-platform-btn', function(event) {
            var platformid = $(event.target).attr('data-platform-id');
        });*/
    </script>
{% endblock %}
